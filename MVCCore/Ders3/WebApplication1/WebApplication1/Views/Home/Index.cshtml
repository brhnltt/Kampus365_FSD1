        <h1>Partial Views</h1>
        <hr />
        @{
            List<string> companies = new List<string>();
            for (var i = 0; i < NumberData.GetNumber(3, 10); i++)
            {
                companies.Add(NameData.GetCompanyName());
            }
        }

        <partial name="_UserListPartial" model="companies"></partial>
    </div>
    <div class="col">
        <div class="row mb-3">
            <div class="col">
                <button id="btn" class="btn btn-primary btn-sm">Load Data</button>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div id="companyList"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $("#btn").click(function() {
            $("#companyList").load("http://localhost:5141/Home/GetUserList")
        });
    </script>
}