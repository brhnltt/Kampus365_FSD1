@model HomeIndexViewModel

@{
    string ad = "Murat";
    string soyad = "Başeren";
    string unvan = "En iyi .NET hocası";

    Random random = new Random();
    int rastgele = random.Next(1, 100);
}

<h1>Contact</h1>
