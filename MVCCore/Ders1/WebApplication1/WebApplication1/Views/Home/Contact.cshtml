@{
    List<string> cities = new List<string>();
    cities.Add("İstanbul");
    cities.Add("Ankara");
    cities.Add("İzmir");
    cities.Add("Adana");
    cities.Add("Antalya");
}

<div class="row">
    <div class="col">
        <h1><i class="fa fa-home mr-2"></i>Samples</h1>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col">
        <ul class="list-group">
            
            @foreach (string city in cities)
            {
               <li class="list-group-item">@city.ToUpper()</li>
            }

        </ul>
    </div>
</div>