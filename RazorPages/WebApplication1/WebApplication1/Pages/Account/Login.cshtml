@page
@model WebApplication1.Pages.Account.LoginModel

<div class="row">
    <div class="col">
        <h1 class="display-4">@Model.PageTitle</h1>
        <small>@Model.PageSubTitle</small>
        <hr />

        <p>@ViewData["Description"]</p>
    </div>
</div>

<div class="row">
    <div class="col-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="johndoe" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" placeholder="******" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary" asp-page-handler="">Login</button>
                <a asp-page="/Index" class="btn btn-secondary">Return Home Page!</a>
            </div>
            <div class="form-group mb-3">
                @if (ViewData["Result"] != null)
                {
                    if (Model.HasError)
                    {
                        <div class="alert alert-danger">@ViewData["Result"]</div>
                    }
                    else
                    {
                        <div class="alert alert-success">@ViewData["Result"]</div>
                    }
                }
            </div>
        </form>
    </div>
    <div class="col-6">
         <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="johndoe" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" placeholder="******" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="RePassword" class="form-label"></label>
                <input asp-for="RePassword" class="form-control" placeholder="******" />
                <span asp-validation-for="RePassword" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary" asp-page-handler="Register">Register</button>
                <a asp-page="/Index" class="btn btn-secondary">Return Home Page!</a>
            </div>
            <div class="form-group mb-3">
                @if (ViewData["RegisterResult"] != null)
                {
                    if (Model.HasError)
                    {
                        <div class="alert alert-danger">@ViewData["RegisterResult"]</div>
                    }
                    else
                    {
                        <div class="alert alert-success">@ViewData["RegisterResult"]</div>
                    }
                }
            </div>
        </form>
    </div>
</div>